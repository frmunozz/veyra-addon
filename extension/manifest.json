{
  "manifest_version": 3,
  "name": "Veyra Addon",
  "description": "Minimal helper layer for the Veyra web game on demonicscans.org.",
  "version": "0.0.1",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_title": "Veyra Addon",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": ["alarms", "notifications", "storage", "tabs"],
  "host_permissions": ["https://demonicscans.org/*"],
  "content_scripts": [
    {
      "matches": ["https://demonicscans.org/*"],
      "js": ["src/content/constants.js", "src/content/menu.js"],
      "css": ["src/styles/menu.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://demonicscans.org/active_wave.php*"],
      "js": ["src/content/constants.js", "src/content/wave-monster-tools.js"],
      "css": ["src/styles/wave-monster-tools.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://demonicscans.org/guild_dungeon_location.php*"],
      "js": ["src/content/constants.js", "src/content/wave-monster-tools.js"],
      "css": ["src/styles/wave-monster-tools.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/notification.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
